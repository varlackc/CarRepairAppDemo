@model IEnumerable<CarRepairApp.Models.ServiceModel>

@{
    ViewBag.Title = "ServiceList";
}

<h2>ServiceList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceDescription)
        </th>
        <th>
            <!--Only Show the Date but not the time using the -->
            @Html.DisplayNameFor(model => model.ServiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("DeleteServiceByID", "Service", new { id = item.ServiceId /* id=item.PrimaryKey */ }))
        { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.ServiceId  /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "SeviceDetails", new { id = item.ServiceId /* id=item.PrimaryKey */ }) |
                
                <input class="btn btn-danger" type="submit" value="Delete"
                       onclick="return confirm('Are you sure you want to delete record with ID = @item.ServiceId Service: @item.ServiceName');" />
            </td>
        </tr>
        }
    }

</table>


<p>
    @Html.ActionLink("Add New Service", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>