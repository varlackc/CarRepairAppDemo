@model IEnumerable<CarRepairApp.Models.EmployeeModel>

@{
    ViewBag.Title = "EmployeeList";
}

<br />
<br />
<br />

<h2>Lista De Empleados</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("DeleteEmployeeByID", "Employee", new { id = item.EmployeeId /* id=item.PrimaryKey */ }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Update", new { id = item.EmployeeId /* id=item.PrimaryKey */ }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Detalles", "EmployeeDetails", new { id = item.EmployeeId /* id=item.PrimaryKey */ }, new { @class = "btn btn-info" })

                    <input class="btn btn-danger" type="submit" value="Borrar"
                           onclick="return confirm('Are you sure you want to delete record with ID = @item.EmployeeId Store: @item.FirstName @item.LastName');" />

                </td>
            </tr>
        }
    }

</table>


<p>
    @Html.ActionLink("Agregar Nuevo Empleado", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>