@model IEnumerable<CarRepairApp.Models.EmployeeModel>

@{
    ViewBag.Title = "EmployeeList";
}

<h2>EmployeeList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.EmployeeId /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "EmployeeDetails", new { id = item.EmployeeId /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "DeleteEmployeeByID", new { id = item.EmployeeId /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>


<p>
    @Html.ActionLink("Add New Employee", "Create")
</p>