@model IEnumerable<CarRepairApp.Models.ClientModel>

@{
    ViewBag.Title = "ClientList";
}

<br />
<br />
<br />
<br />


<div class="content-head content-title">
    <br/>
    <h2><i class="fa fa-user-circle-o" aria-hidden="true"></i> Lista De Clientes</h2>
    <br/>
</div>

    <table class="table">
        <tr class="content-body">
            <th>
                Cliente ID
            </th>
            <th>
                Nombre Del Usuario
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Ubicacion
            </th>
            <th>
                Telefono
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            using (Html.BeginForm("DeleteClientByID", "Client", new { id = item.ClientId /* id=item.PrimaryKey */ }))
            {
                <tr>
                    <td>

                        <a onclick="location.href = '@(Url.Action("ClientDetails", "Client", new { id = item.ClientId }))'">
                            @Html.DisplayFor(modelItem => item.ClientId)
                        </a>
                    </td>
                    <td>
                        <a onclick="location.href = '@(Url.Action("ClientDetails", "Client", new { id = item.ClientId }))'">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Update", new { id = item.ClientId /* id=item.PrimaryKey */ }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Detalles", "ClientDetails", new { id = item.ClientId /* id=item.PrimaryKey */ }, new { @class = "btn btn-info" })

                        <input class="btn btn-danger" type="submit" value="Borrar"
                               onclick="return confirm('Esta Suguro que decea borrar el record con ID = @item.ClientId Cliente: @item.FirstName @item.LastName');" />
                    </td>
                </tr>
            }
        }

    </table>

    <p>
        @Html.ActionLink("Agregar  Nuevo Cliente", "Create", null, new { @class = "btn btn-primary btn-large" })
    </p>
